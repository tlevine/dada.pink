## PHP

    exec("pdftotext my-fancy-document.pdf");

## Python

    import subprocess
    process = subprocess.Popen(['pdftotext', 'my-fancy-document.pdf'])
    process.wait()

## Shell

    echo 'pdftotext my-fancy-document.pdf' | sh
